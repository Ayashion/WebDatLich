@using WebDatLich.Data

@{
    ViewData["Title"] = "Index";
}
@model List<TourGuide>
<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Travel Guide</h6>
            <h1 class="mb-5">Meet Our Guide</h1>
        </div>
        <div class="row g-4">
            @foreach (var member in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                        <div class="text-center p-4">
                            <h5 class="mb-0">.</h5>
                            <!-- Hiển thị tên -->
                            <h5 class="mb-0">@member.Employee.FullName</h5>
                            <!-- Hiển thị số năm kinh nghiệm -->
                            <p><strong>Years of Experience:</strong> @member.ExperienceYears</p>
                            <!-- Hiển thị ngôn ngữ nói -->
                            <p><strong>Languages Spoken:</strong> @member.LanguageSpoken</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Team End -->

