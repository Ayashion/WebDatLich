@using WebDatLich.Data

@{
    ViewData["Title"] = "Edit";
}
@model Account

<div class="container-xxl py-5">
    <div class="info-container">
        <h2 style="font-size: 24px; font-weight: bold; text-align: center;margin-bottom: 20px;">Thông tin người dùng</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Username" />

                <div>
                    <label>Password:</label>
                    <input type="password" name="pass" value="@Model.Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div>
                    <label>Tên đầy đủ:</label>
                    <input type="text" name="name" value="@Model.Customer?.FullName" />
                </div>

                <button class="info-button" type="submit">Cập nhật</button>
            </form>

            @if (ViewBag.Message != null)
            {
                <p class="mt-3" style="color: green;">@ViewBag.Message</p>
            }
    </div>
</div>

